<!DOCTYPE html>
<html>
  <head>
    <title> Popper! </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <table>
        <tr>
          <td>
            <% if current_user.present? %>
              <%= link_to avatar_for(current_user, size: 35), current_user %>
            <% else %>
              <%= link_to 'Sign Up!', new_user_registration_path, id: "sign_up_button" %>
            <% end %>
          </td>
          <td>
            <% if current_user.present? %>
              <h1><%= link_to 'Popper', root_path, id: "Main_Title"%></h1>
            <% else %>
              <h1> Popper </h1>
            <% end %>
          </td>
            <td>
          <% if current_user.present? %>
            <% if @var != 1 %>
              <%= link_to 'Recents', posts_path, id: "function_button" %>
            <% else %>
              <%= link_to 'Explore', explore_path, id: "function_button" %>
            <% end %>
            <%= link_to 'Create Post', new_post_path, id: "function_button" %>
          <% else %>
            <%= link_to 'Sign In!', new_user_session_path, id: "sign_in_button" %>
          <% end %>
          </td>
        </tr>
      </table>
    </header>

    <!-- <p class="notice"><%= notice %></p> <p class="alert"><%= alert %></p> -->

    <!-- calls the other views in the Social_Media_Website folder -->
    <%= yield %>
    <p></p>

    <footer>
      <p>Brought to you by Pop0097. Made in Spring 2020</p>
    </footer>

  </body>
</html>
