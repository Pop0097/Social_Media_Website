<%= link_to 'Return to Feed', root_path %>

<h2> Popper Accounts </h2>

<form action = "/search">
  Search for Users<br>
  <input name = "q" type="text" placeholder = "Search" aria-label="Search">
  <button type="submit">Search</button>
</form>


<table>
  <center>
    <tr>
      <td colspan = "2">
        <strong>Username:</strong>
      </td>
      <td>
        <strong>Followers:</strong>
      </td>
      <td>
        <strong>Following:</strong>
      </td>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td width = "50">
          <%= link_to avatar_for(user, size: 35), user %>
        </td>
        <td width = "60">
          <%= user.username %>
        </td>
        <td width = "85">
          <%= user.followers.count %>
        </td>
        <td width = "85">
          <%= user.following.count %>
        </td>
      </tr>
    <% end %>
  </center>
</table>
