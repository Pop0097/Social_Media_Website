<% @user = User.find(params[:id]) %>

<aside>
  <%= link_to 'Go back to feed', posts_path %><br>
  <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
</aside>

<h2> User Information: </h2>
<table id = "user_infomation_table">
  <tr>
    <td colspan = "2">
      <h4> General Account Information: </h4>
    </td>
  </tr>
  <p>
  <tr>
    <td>
        <strong>Username: </strong>
    </td>
    <td>
        <%= @user.username %>
    </td>
  </tr>
  <tr>
    <td>
      <strong>Email: </strong>
    </td>
    <td>
      <%= @user.email %>
    </td>
  </tr>
  <tr>
    <td>
      <strong>Password: </strong>
    </td>
    <td>
      LINK TO CHANGE PASSWORD

    </td>
  </tr>
  </p>
</table>

<table id = "user_infomation_table">
  <tr>
    <td colspan = "2">
      <h4> Personal Information: </h4>
    </td>
  </tr>
  <p>
  <tr>
    <td>
        <strong>Name: </strong>
    </td>
    <td>
      <%= @user.name %>
    </td>
  </tr>
  <tr>
    <td>
      <strong>Birth Month: </strong>
    </td>
    <td>
      <%= @user.birth_month %>, <%= @user.birth_year %>
    </td>
  </tr>
  <tr>
    <td>
      <strong>Sex: </strong>
    </td>
    <td>
      <%= @user.sex %>
    </td>
  </tr>
  </p>
</table>
