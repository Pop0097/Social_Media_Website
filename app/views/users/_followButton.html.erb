<% if current_user.id != @user.id %>
  <% if current_user.following?(@user) %> <!-- if current_user is already following @user -->
    <%= button_to 'Unfollow', follows_path(user_id: @user.id), method: :delete, id: "follow_button_negative" %>
  <% else %>
    <%= button_to 'Follow', follows_path(user_id: @user.id), id: "follow_button_positive" %>
  <% end %>
<% end %>
