<!-- Displays all the people that the user follows -->
<center>
  <article id = "recents_article">
    <p style = "text-align:left">
      <%= link_to 'Back', @user, id: "back_link" %>
    </p>

    <p id = "recents_title"> <%= @user.username %>'s Followers </p>

    <table id = "recents_table">
      <tr>
        <td colspan = "2" width = "250">
          <center>
            <strong>Username:</strong>
          </center>
        </td>
        <td width = "140">
          <center>
            <strong>Followers:</strong>
          </center>
        </td>
        <td width = "140">
          <center>
            <strong>Following:</strong>
          </center>
        </td>
      </tr>
    </table>

    <% @followers.reverse_each do |followers| %>
      <table id = "recents_table">
        <tr>
          <td width = "60">
            <%= link_to followers do %>
              <% @link = followers.avatar.url(:thumb) %>
              <%if @link %>
                <div id = "avatar_image" style = "background: url(<%= @link %>)" >
                </div>
              <% else %>
                <div id = "avatar_image" style = "background: url(<%= asset_path 'default_avatar.jpg' %>)">
                </div>
              <% end %>
            <% end %>
          </td>
          <td width = "130">
            <%= link_to followers.username, followers, id: "user_link"%>
          </td>
          <td width = "150">
            <center>
              <%= followers.followers.count %>
            </center>
          </td>
          <td width = "150">
            <center>
              <%= followers.following.count %>
            </center>
          </td>
        </tr>
      </table>
    <% end %>
  </article>
</center>
